{
  "name": "Swan",
  "private": true,
  "type": "module",
  "packageManager": "pnpm@10.30.2+sha512.36cdc707e7b7940a988c9c1ecf88d084f8514b5c3f085f53a2e244c2921d3b2545bc20dd4ebe1fc245feec463bb298aecea7a63ed1f7680b877dc6379d8d0cb4",
  "config": {
    "swift_sdk_wasm": "swift-6.3-DEVELOPMENT-SNAPSHOT-2026-02-14-a_wasm"
  },
  "scripts": {
    "swift-setup": "swiftly install && swiftly use",
    "build": "swift build",
    "build:release": "swift build -c release",
    "wasm:build": "SWAN_WASM=1 swift build --target WebGPU --swift-sdk $npm_package_config_swift_sdk_wasm",
    "wasm:build:bridgejs": "SWAN_WASM=1 swift package plugin --allow-writing-to-package-directory bridge-js",
    "wasm:demo:bitonic": "SWAN_WASM=1 swift package --swift-sdk $npm_package_config_swift_sdk_wasm js --product BitonicSort && pnpx serve .",
    "test": "swift test",
    "generate:apinotes": "swift package --allow-writing-to-package-directory generate-dawn-apinotes",
    "demo:gameoflife": "swift run GameOfLife",
    "demo:bitonic": "swift run BitonicSort",
    "format": "swift format --in-place --recursive Sources Tests Demos",
    "clean": "swift package clean",
    "resolve": "swift package resolve"
  },
  "dependencies": {
    "typescript": "5.8.2"
  }
}
